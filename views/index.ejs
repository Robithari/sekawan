                <!-- Countdown Box -->
                <div class="container-box"
                    style="background-image: url('https://png.pngtree.com/background/20230526/original/pngtree-green-field-inside-football-stadium-in-silhouette-under-sky-picture-image_2745416.jpg'); background-size: cover; background-position: center; background-attachment: scroll;">
                    <div class="countdown-box">
                        <p class="underline-text"><u>PERTANDINGAN TERDEKAT</u></p>
                        <% if (!matchData) { %>
                            <p id="loading-message">Mohon tunggu...</p>
                            <% } else { %>
                                <p id="teams" style="color: rgb(3, 198, 3); margin-bottom: 2px;">
                                <div style="text-align: center;">
                                    <div id="ourTeam" style="font-size: 12px; margin-bottom: -3px; color: purple;">
                                        <%= matchData.timKita %>
                                    </div>
                                    <div id="vs" style="font-size: 9px; font-weight: bold; color: red;">vs</div>
                                    <div id="opponentTeam" style="font-size: 12px; margin-top: -2px; color: purple;">
                                        <%= matchData.timLawan %>
                                    </div>
                                </div>
                                </p>
                                <!-- Menampilkan tanggal dan waktu pertandingan -->
                                <p id="event-data">
                                <p style="color: green;">
                                    <%= matchData.hari %>, <%= matchData.formattedTanggal %>, <%= matchData.waktu %> WIB
                                </p>
                                </p>
                                <!-- Countdown timer yang sudah dihitung di backend -->
                                <div id="countdown" class="waktu-mundur" style="color: red;">
                                    <%= countdown %>
                                </div>
                                <script>
                                    (function () {
                                        // Parse match date and time from server-rendered data
                                        const matchDateStr = "<%= matchData ? matchData.tanggal : '' %>";
                                        const matchTimeStr = "<%= matchData ? matchData.waktu.replace('.', ':') : '' %>";

                                        if (matchDateStr && matchTimeStr) {
                                            const matchDateTime = new Date(matchDateStr);
                                            const [hours, minutes] = matchTimeStr.split(':').map(Number);
                                            matchDateTime.setHours(hours, minutes, 0, 0);

                                            const matchEndTime = new Date(matchDateTime.getTime() + 90 * 60 * 1000);

                                            function updateCountdown() {
                                                const now = new Date();

                                                if (now >= matchEndTime) {
                                                    document.getElementById('countdown').textContent = 'Pertandingan Sudah Selesai';
                                                    clearInterval(timerInterval);
                                                    return;
                                                }

                                                if (now >= matchDateTime) {
                                                    document.getElementById('countdown').textContent = 'Pertandingan Sedang Dimulai';
                                                    return;
                                                }

                                                let diff = matchDateTime - now;

                                                const hoursLeft = Math.floor(diff / (1000 * 60 * 60));
                                                diff -= hoursLeft * 1000 * 60 * 60;
                                                const minutesLeft = Math.floor(diff / (1000 * 60));
                                                diff -= minutesLeft * 1000 * 60;
                                                const secondsLeft = Math.floor(diff / 1000);

                                                document.getElementById('countdown').textContent = `${hoursLeft} jam ${minutesLeft} menit ${secondsLeft} detik`;
                                            }

                                            updateCountdown();
                                            const timerInterval = setInterval(updateCountdown, 1000);
                                        }
                                    })();
                                </script>
                                <% } %>
                    </div>
