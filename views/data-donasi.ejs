                <!-- Data Donasi -->
                <div class="container-data-donasi">
                    <div class="container-donasi">
                        <h5>DATA DONASI</h5>

                        <!-- Form Pencarian -->
                        <div class="search-container mb-3 d-flex align-items-center gap-3">
                            <input type="text" id="searchInput" class="form-control search-input"
                                placeholder="Nama Donatur..." aria-label="Cari donatur">
                            <div class="button-group d-flex gap-2">
                                <button onclick="search()" class="btn btn-primary btn-action">Cari</button>
                                <button onclick="cancelSearch()" class="btn btn-secondary btn-action">Batal</button>
                            </div>
                        </div>
                        <div id="searchHint" class="text-info mb-3" style="display:none; font-style: italic;">
                            Mungkin yang anda maksud nama donatur dibawah ini:
                        </div>

                        <div class="table-container table-responsive">
                            <table id="data-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th>NO.</th>
                                        <th style="text-align: center;">TANGGAL</th>
                                        <th style="text-align: center;">NAMA</th>
                                        <th style="text-align: center;">INVOICE NUMBER</th>
                                        <th style="text-align: center;">JUMLAH</th>
                                        <th>KETERANGAN</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (donasiData && donasiData.length> 0) { %>
                                        <% let totalDonasi = 0; %>
                                        <% donasiData.forEach((item, index)=> { %>
                                            <% if (!item.isLastRow && item.jumlah && typeof item.jumlah === 'string' && item.jumlah.startsWith('Rp')) { %>
                                                <% totalDonasi += parseInt(item.jumlah.replace(/[^\d]/g, '')) || 0; %>
                                            <% } %>
                                            <% if (!item.isLastRow) { %>
                                            <tr class="<%= item.rowClass %>">
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td class="text-start">
                                                    <% if (item.tanggal) { 
                                                        const tgl = item.tanggal.split('-');
                                                        if (tgl.length === 3) { %>
                                                            <%= tgl[2] + '-' + tgl[1] + '-' + tgl[0] %>
                                                        <% } else { %>
                                                            <%= item.tanggal %>
                                                        <% } 
                                                    } else { %>
                                                        -
                                                    <% } %>
                                                </td>
                                                <td class="text-start">
                                                    <%= item.nama || '' %>
                                                </td>
                                                <td class="text-start">
                                                    <%= item.invoiceNumber && item.invoiceNumber.trim() !== '' ? item.invoiceNumber : '-' %>
                                                </td>
                                                <td class="text-end <%= item.isLastRow ? 'total-column' : '' %>">
                                                    <%= item.jumlah || '' %>
                                                </td>
                                                <td>
                                                    <%= item.keterangan || '' %>
                                                </td>
                                            </tr>
                                            <% } %>
                                        <% }); %>
                                        <tr class="green-row">
                                            <td colspan="4" class="text-end"><b>Jumlah Total</b></td>
                                            <td class="text-end"><b>Rp. <%= totalDonasi.toLocaleString('id-ID') %></b></td>
                                            <td></td>
                                        </tr>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">Tidak ada data donasi</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
